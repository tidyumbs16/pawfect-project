pipeline {
    agent any

    tools {
        // ‡∏ñ‡πâ‡∏≤ Jenkins ‡πÉ‡∏ä‡πâ PATH ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ö Windows shell ‡∏à‡∏∞‡∏´‡∏≤ Bun ‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢
        // ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡πÄ‡∏à‡∏≠ bun ‡πÉ‡∏´‡πâ‡πÄ‡∏û‡∏¥‡πà‡∏° PATH ‡πÉ‡∏ô System Environment
    }

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/tidyumbs16/pawfect-project.git',
                    branch: 'main',
                    credentialsId: 'github-token'
                )
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'bun install'
            }
        }

        stage('Build') {
            steps {
                bat 'bun run build'
            }
        }

        stage('Test') {
            steps {
                bat 'bun test'
            }
        }
    }

    post {
        success {
            echo "üéâ Build Success!"
        }
        failure {
            echo "‚ùå Build Failed!"
        }
    }
}
