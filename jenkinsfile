pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/tidyumbs16/pawfect-project.git',
                    branch: 'main',
                    credentialsId: 'tidyumbs16'
                )
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'bun install'
            }
        }

        stage('Build Next.js') {
            steps {
                // bun x will find next.js binary automatically
                bat 'bun x next build'
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Build Success!"
        }
        failure {
            echo "âŒ Build Failed"
        }
    }
}
