generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model profiles {
  id                      String                    @id @db.Uuid
  username                String
  avatar_url              String?
  bio                     String?
  created_at              DateTime?                 @default(now()) @db.Timestamptz(6)
  gender                  String?
  birthdate               DateTime?                 @db.Date
  dismissed_notifications dismissed_notifications[]
  favorites               favorites[]

  @@map("profiles")
  @@schema("public")
}

model Pet {
  id           String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt    DateTime?      @default(now()) @map("created_at") @db.Timestamptz(6)
  owner_id     String         @db.Uuid
  name         String
  image        String?        @map("image_url")
  updatedAt    DateTime?      @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  appointments appointments[]
  diaries      Diary[]

  @@map("pets")
  @@schema("public")
}

model Diary {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  pet_id     String   @db.Uuid
  title      String
  content    String?
  image_urls String[]
  log_date   DateTime @db.Date
  created_at DateTime @default(now())
  pet        Pet      @relation(fields: [pet_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("diaries")
  @@schema("public")
}

model favorites {
  id         BigInt     @id @default(autoincrement())
  user_id    String?    @db.Uuid
  name_id    BigInt?
  created_at DateTime?  @default(now()) @db.Timestamptz(6)
  pet_names  pet_names? @relation(fields: [name_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  profiles   profiles?  @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, name_id], map: "unique_user_name_favorite")
  @@map("favorites")
  @@schema("public")
}

model pet_names {
  id         BigInt      @id @default(autoincrement())
  name       String      @unique(map: "unique_pet_name")
  meaning    String?
  type       String
  popularity Int?        @default(0)
  created_at DateTime?   @default(now()) @db.Timestamptz(6)
  name_th    String?
  name_en    String?
  total_hits Int?        @default(0)
  favorites  favorites[]

  @@map("pet_names")
  @@schema("public")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model appointments {
  id                      String                    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at              DateTime?                 @default(now()) @db.Timestamptz(6)
  pet_id                  String                    @db.Uuid
  title                   String
  description             String?
  appointment_date        DateTime                  @db.Timestamptz(6)
  is_notification_enabled Boolean?                  @default(true)
  status                  String?                   @default("pending")
  pets                    Pet                       @relation(fields: [pet_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  dismissed_notifications dismissed_notifications[]

  @@schema("public")
}

model dismissed_notifications {
  id             String       @id @default(uuid())
  dismissed_at   DateTime     @default(now())
  user_id        String       @db.Uuid
  appointment_id String       @db.Uuid
  is_deleted     Boolean      @default(false)
  appointment    appointments @relation(fields: [appointment_id], references: [id], onDelete: Cascade)
  user           profiles     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, appointment_id])
  @@schema("public")
}
